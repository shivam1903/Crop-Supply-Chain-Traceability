<configuration>

    <!-- Define properties for Logstash URL and authentication -->
    <property name="LOGSTASH_URL" value="http://127.0.0.1:5044" />
    <property name="LOGSTASH_USERNAME" value="your-username" />
    <property name="LOGSTASH_PASSWORD" value="your-password" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (Fallback) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logstash Appender with Authentication -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>127.0.0.1:5044</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        <connectionTimeout>5000</connectionTimeout>
        <readTimeout>10000</readTimeout>

        <headers>
            <header>
                <name>Authorization</name>
                <value>Basic ${base64Encode("${LOGSTASH_USERNAME}:${LOGSTASH_PASSWORD}")}</value>
            </header>
            <header>
                <name>Content-Type</name>
                <value>application/json</value>
            </header>
        </headers>
    </appender>

    <!-- Root Logger: Uses Logstash (if available) and falls back to File & Console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGSTASH" />
    </root>

</configuration>
